{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@assets": ["./src/assets/index"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@api/*": ["./src/api/*"],
			"@routing/*": ["./src/routing/*"],
			"@e2e/*": ["./e2e/*"],
			"@utils/*": ["./src/utils/*"],
			"@utils": ["./src/utils/index"],
			"@validations/*": ["./src/validations/*"],
			"@validations": ["./src/validations/index"],
			"@services/*": ["./src/services/*"],
			"@services": ["./src/services/index"],
			"@src/*": ["./src/*"],
			"@enums/*": ["./src/enums/*"],
			"@enums": ["./src/enums/index"],
			"@constants/*": ["./src/constants/*"],
			"@constants": ["./src/constants/index"],
			"@models/*": ["./src/models/*"],
			"@models": ["./src/models/index"],
			"@utilities/*": ["./src/utilities/*"],
			"@utilities": ["./src/utilities/index"],
			"@i18n/*": ["./src/i18n/*"],
			"@i18n": ["./src/i18n/index"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@interfaces": ["./src/interfaces/index"],
			"@type/*": ["./src/types/*"],
			"@type": ["./src/types/index"],
			"@api": ["./src/api/index"],
			"@store/*": ["./src/store/*"],
			"@store": ["./src/store/index"],
			"@hooks": ["./src/hooks/index"],
			"@hooks/*": ["./src/hooks/*"],
			"@locales/*": ["./src/locales/*"],
			"@ak-proto-ts/*": ["./src/autokitteh/proto/gen/ts/autokitteh/*"]
		}
	},
	"exclude": ["node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }],
	"include": [
	  "src",
	  "src/assets/templates/index.d.ts"
	]
}
